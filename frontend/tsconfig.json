{
  "compilerOptions": {
    "target": "esnext",              // Modern JS
    "module": "esnext",               // Use esnext modules for Vite
    "rootDir": "./src",               // Good
    "outDir": "./dist",               // Good
    "esModuleInterop": true,          // Good
    "strict": true,                   // Good
    "jsx": "react-jsx",               // ðŸ‘ˆ This is missing (for JSX support in React 17+)
    "resolveJsonModule": true,        // ðŸ‘ˆ Needed to import columns.json
    "allowSyntheticDefaultImports": true, // ðŸ‘ˆ Optional, helps Vite
    "moduleResolution": "node",       // ðŸ‘ˆ Important for import paths
    "skipLibCheck": true,              // ðŸ‘ˆ Optional, faster builds, avoids unnecessary errors
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "cypress"
  ]
}
